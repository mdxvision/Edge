modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "glib", "gtk3", "xorg.libX11", "xorg.libXcomposite", "xorg.libXcursor", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXi", "xorg.libXrandr", "xorg.libXrender", "xorg.libXtst", "nss", "nspr", "atk", "at-spi2-atk", "cups", "libdrm", "mesa", "libxkbcommon", "alsa-lib", "pango", "cairo", "expat", "gdk-pixbuf"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"cd /home/runner/workspace && uvicorn app.main:app --host 0.0.0.0 --port 8000 & cd /home/runner/workspace/client && npm run dev & wait\""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46621
externalPort = 3000
