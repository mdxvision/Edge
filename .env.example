# Edge Platform Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# For local development (SQLite - default if not set):
# DATABASE_URL=sqlite:///./sports_betting.db

# For PostgreSQL (production):
DATABASE_URL=postgresql://edge:edge_password@localhost:5432/edge_db

# PostgreSQL Docker settings (used by docker-compose)
POSTGRES_USER=edge
POSTGRES_PASSWORD=edge_password
POSTGRES_DB=edge_db

# Connection pool settings (PostgreSQL only)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =============================================================================
# AUTHENTICATION
# =============================================================================
SESSION_SECRET=your-secret-key-change-in-production

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# The Odds API (https://the-odds-api.com)
THE_ODDS_API_KEY=your-odds-api-key

# Weather API (https://weatherapi.com)
WEATHER_API_KEY=your-weather-api-key

# MySportsFeeds (https://mysportsfeeds.com)
MYSPORTSFEEDS_API_KEY=your-msf-api-key

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Firebase (for push notifications)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# =============================================================================
# PAYMENTS (Stripe)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
