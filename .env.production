# Edge Platform - Production Environment
# Copy to .env and configure for production deployment

# =============================================================================
# DATABASE (managed via Docker secrets in production)
# =============================================================================
POSTGRES_DB=edge_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# APPLICATION
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# EXTERNAL APIS (set via Docker secrets or environment)
# =============================================================================
# THE_ODDS_API_KEY - set in secrets/odds_api_key.txt
# STRIPE_SECRET_KEY - set in secrets/stripe_secret.txt

# Weather API (https://weatherapi.com)
WEATHER_API_KEY=

# MySportsFeeds (https://mysportsfeeds.com)
MYSPORTSFEEDS_API_KEY=

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Firebase (for push notifications)
FIREBASE_CREDENTIALS_PATH=/app/firebase-credentials.json

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Domain for CORS and cookies
DOMAIN=yourdomain.com

# SSL/TLS (handled by reverse proxy in production)
SECURE_COOKIES=true
